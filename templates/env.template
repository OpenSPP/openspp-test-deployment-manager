# OpenSPP Deployment Environment Template
# This file is used as a template for generating deployment-specific .env files

# Project identification
COMPOSE_PROJECT_NAME={{ project_name }}
DEPLOYMENT_ID={{ deployment_id }}

# User/Group IDs
UID={{ uid }}
GID={{ gid }}

# Port configuration
ODOO_PORT={{ odoo_port }}
SMTP_PORT={{ smtp_port }}
PGWEB_PORT={{ pgweb_port }}
DEBUGGER_PORT={{ debugger_port }}

# Default Odoo configuration
ODOO_DB={{ odoo_db }}
ODOO_ADMIN_PASSWORD=admin
ODOO_DEMO=true
ODOO_LOAD_LANGUAGE=en_US
ODOO_WITHOUT_DEMO=false

# Database configuration
DB_HOST=db
DB_PORT=5432
DB_USER=odoo
DB_PASSWORD=odoo

# SMTP Configuration
SMTP_HOST=smtp
SMTP_PORT=1025
SMTP_USER=odoo
SMTP_PASSWORD=odoo

# PGWeb Configuration
PGWEB_DATABASE_URL=postgres://odoo:odoo@db:5432/{{ odoo_db }}?sslmode=disable

# Development settings
DEBUGGER_ENABLED=true
LOG_LEVEL=info
ODOO_EXTRA_ARGS=--dev=all

# Resource limits
DOCKER_CPU_LIMIT={{ cpu_limit }}
DOCKER_MEMORY_LIMIT={{ memory_limit }}

# Additional environment-specific settings
ENVIRONMENT={{ environment }}