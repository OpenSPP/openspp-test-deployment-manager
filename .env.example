# OpenSPP Deployment Manager Environment Configuration

# Base configuration
DEPLOYMENT_BASE_PATH=./deployments
PORT_RANGE_START=18000
PORT_RANGE_END=19000

# Domain configuration
BASE_DOMAIN=test.openspp.org
NGINX_CONFIG_PATH=/etc/nginx/sites-available

# Resource limits
MAX_DEPLOYMENTS_PER_TESTER=3
DOCKER_CPU_LIMIT=2
DOCKER_MEMORY_LIMIT=4GB

# Git configuration
OPENSPP_DOCKER_REPO=https://github.com/OpenSPP/openspp-docker.git
DEFAULT_BRANCH=17.0

# Optional: GitHub token for private repositories
# GITHUB_TOKEN=your_github_token_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/deployment-manager.log

# Database
DATABASE_PATH=deployments.db

# Nginx settings
NGINX_RELOAD_COMMAND="sudo nginx -s reload"
AUTO_SSL=false

# Monitoring
STATUS_CHECK_INTERVAL=60
CLEANUP_INTERVAL=3600

# Development settings
DEBUG=false